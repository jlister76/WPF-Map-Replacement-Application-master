<Page x:Class="FSV42_FullMapReplacement.StateSelectorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FSV42_FullMapReplacement"
      mc:Ignorable="d" 
      d:DesignHeight="193" d:DesignWidth="520"
      Title="State Selector Page">

    <Grid HorizontalAlignment="Left" Height="193" VerticalAlignment="Top" Width="520" Background="#FFF0F0F0">
        <Label x:Name="label" Content="Select State" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="48,37,0,0" Height="34" Width="294"/>
        <ComboBox x:Name="comboBox" ItemsSource="{Binding StateCollection}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="294" Margin="142,37,0,0" Height="30" SelectionChanged="ComboBox_SelectionChanged"/>
        <Button x:Name="NEXT_BTN" Content="Next" HorizontalAlignment="Left" Margin="387,140,0,0" VerticalAlignment="Top" Width="101" Height="27" Click="NEXTBTN_Click" IsEnabled="False"/>
    </Grid>
</Page>
